<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Marin.UI"
             xmlns:fluent="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             x:Class="Marin.UI.App"
             RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <fluent:FluentAvaloniaTheme />
        <StyleInclude Source="/Resources/Styles.axaml" />
        <StyleInclude Source="/Controls/Tabs/Preferences/Category.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/Themes.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>