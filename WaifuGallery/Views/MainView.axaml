<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WaifuGallery.ViewModels"
             xmlns:controls="clr-namespace:WaifuGallery.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WaifuGallery.Views.MainView"
             x:DataType="vm:MainViewViewModel"
             Name="MainViewControl">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewViewModel />
    </Design.DataContext>

    <!-- Main Grid -->
    <Grid RowDefinitions="Auto,*,Auto" Name="MainGrid">
        <!-- Menu Bar-->
        <controls:MenuBar Grid.Row="0" DataContext="{Binding MenuBarViewModel}" IsVisible="{Binding IsMenuVisible}" />
       
        <!-- Main Area -->
        <Grid Grid.Row="1" Name="MainArea">
            <!-- Tabs -->
            <controls:TabsControl DataContext="{Binding TabsViewModel}" />
            <!-- File Explorer -->
            <Panel Name="FileExplorerPanel"
                   Background="{Binding FileExplorerViewModel.FileExplorerBackground}">
                <controls:FileExplorer DataContext="{Binding FileExplorerViewModel}" Opacity="1" />
            </Panel>
        </Grid>
        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#3A3AFF"
                Margin="0,0,0,0"
                BorderBrush="Red"
                BorderThickness="1"
                IsVisible="{Binding StatusBarViewModel.IsStatusBarVisible}">
            <Label Content="{Binding StatusBarViewModel.Message}" Foreground="White" />
        </Border>
    </Grid>
</UserControl>