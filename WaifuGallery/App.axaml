<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:WaifuGallery"
             xmlns:fluent="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             x:Class="WaifuGallery.App"
             RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <fluent:FluentAvaloniaTheme />
        <StyleInclude Source="/Resources/Styles.axaml" />
        <StyleInclude Source="/Controls/Tabs/Preferences/Category.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/Themes.axaml" />
                <ResourceInclude Source="/Resources/Icons.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="Phosphor">avares://WaifuGallery/Resources/Fonts#Phosphor</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>